<?xml version="1.0" encoding="UTF-8"?>
<addon id="plugin.video.sapo"
       name="Sapo Videos"
       version="2.0.0"
       provider-name="fightnight/Leinad4Mind">
    <requires>
        <import addon="xbmc.python" version="3.0.0"/> 
		<import addon="script.module.requests"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
		<language>pt</language>
		<summary lang="en">Sapo Videos addon for Kodi</summary>
		<summary lang="pt">Sapo Vídeos addon para o Kodi</summary>
        <description lang="en">Live and On-Demand videos from Sapo Videos webpage for Kodi.</description>
		<description lang="pt">Vídeos e transmissões ao vivo do Sapo Vídeos para o Kodi.</description>
		<disclaimer lang="en">Independent and opensource plugin not endorsed by Sapo.</disclaimer>
		<disclaimer lang="pt">Addon independente e opensource não afiliado com o Sapo.</disclaimer>
        <platform>all</platform>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
        </assets>
        <news>
            v2.0.0 released Abr 01, 2021:
            - Kodi 19 Compatibility
        </news>
    </extension>
</addon>